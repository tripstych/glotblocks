  "constraints": {
    "desc": "Standard Rules",
    "no_double_start": {
      "pattern": "^[^aeiou]{2}"
    },
    "no_triple_consonant": {
      "pattern": "[^aeiou]{3}"
    },
    "must_end_vowel": {
      "pattern": "[^aeiou]$"
    }
  },
  "orthography": {
    "desc": "Spelling Styles",
    "default": [
      {
        "from": "th",
        "to": "\u00de"
      },
      {
        "from": "ing",
        "to": "\u16dd"
      },
      {
        "from": "ch",
        "to": "\u16bb"
      },
      {
        "from": "h",
        "to": "\u16ba"
      }
    ]
  },
  "ontology": {
    "desc": "Grammar (POS) and Elements",
    "adjective": {
      "weight": 1.0,
      "note": "POS: Descriptors. Flowing.",
      "add_shapes": [
        "(V)CV",
        "CV(C)V"
      ]
    },
    "adverb": {
